<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sfondo"
    android:background="@drawable/control_ar_drive_tank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="v3d.com.ardrivetank.PreMainActivity">

    <ImageButton
        android:id="@+id/id_UK_button"
        android:layout_width="98dp"
        android:layout_height="75dp"
        android:layout_marginRight="142dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/control_ar_drive_tank"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/uk"
        android:layout_marginEnd="142dp" />

    <ImageButton
        android:id="@+id/id_PT_button"
        android:layout_width="98dp"
        android:layout_height="72dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/control_ar_drive_tank"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/portugal"
        android:layout_marginStart="117dp" />

    <ImageButton
        android:id="@+id/id_BR_button"
        android:layout_width="98dp"
        android:layout_height="72dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/control_ar_drive_tank"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brazil"
        android:layout_marginStart="117dp" />

    <ImageButton
        android:id="@+id/id_IT_button"
        android:layout_width="98dp"
        android:layout_height="75dp"
        android:layout_marginRight="142dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/control_ar_drive_tank"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/italy"
        android:layout_marginEnd="142dp" />

    <ImageButton
        android:id="@+id/id_info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/info_35x35"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.468" />

    <ImageButton
        android:id="@+id/id_btn_comandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/comandi_35x35"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toTopOf="@+id/id_info_btn"
        app:layout_constraintHorizontal_bias="0.468" />

    <TextView
        android:id="@+id/V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="V: 0.1.5.0"
        app:layout_constraintLeft_toRightOf="@+id/id_info_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.741" />

</android.support.constraint.ConstraintLayout>

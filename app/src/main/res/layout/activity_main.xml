<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sfondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/control_ar_drive_tank"
    tools:context="v3d.com.ardrivetank.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="73dp">

    //BT-button


    <ImageButton
        android:id="@+id/imBtn_bt"
        android:layout_width="43dp"
        android:layout_height="69dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/control_ar_drive_tank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039"
        app:srcCompat="@drawable/bt"
        android:layout_marginStart="46dp" />

    //UP-button

    <ImageButton
        android:id="@+id/up_button"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="107dp"
        android:background="@drawable/control_ar_drive_tank"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/new_pulsanti_forward" />


    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="75dp"
        android:layout_height="73dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/control_ar_drive_tank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/new_pulsanti_back" />

    //left-button

    <ImageButton
        android:id="@+id/left_button"
        android:layout_width="75dp"
        android:layout_height="73dp"
        android:layout_marginLeft="338dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="338dp"
        android:layout_marginTop="172dp"
        android:background="@drawable/control_ar_drive_tank"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/right_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/new_pulsanti_left"
        android:layout_marginEnd="8dp" />

    //right-button

    <ImageButton
        android:id="@+id/right_button"
        android:layout_width="75dp"
        android:layout_height="73dp"
        android:layout_marginEnd="44dp"
        android:layout_marginLeft="480dp"
        android:layout_marginRight="44dp"
        android:layout_marginStart="480dp"
        android:layout_marginTop="172dp"
        android:background="@drawable/control_ar_drive_tank"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/new_pulsanti_right" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="97dp"
        android:layout_height="23dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/control_ar_drive_tank"
        android:text="V: 0.1.2.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/led_ardrivetank_vuoto"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="347dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/control_ar_drive_tank"
        app:layout_constraintHorizontal_bias="0.624"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/led_vuoto_35x35" />

    <ImageButton
        android:id="@+id/led_ardrivetank_rosso"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="192dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/control_ar_drive_tank"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/led_rosso_35x35" />

    <ImageButton
        android:id="@+id/led_ardrivetank_verde"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_marginLeft="192dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/control_ar_drive_tank"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintHorizontal_bias="0.622"
        app:srcCompat="@drawable/led_verde_35x35"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_nome_dispositivo_connesso"
        android:layout_width="165dp"
        android:layout_height="63dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="98dp"
        android:background="@drawable/control_ar_drive_tank"
        android:text="Connesso a: "
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_bt"
        android:layout_width="140dp"
        android:layout_height="73dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/control_ar_drive_tank"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="444dp" />

    <Button
        android:id="@+id/id_connetti_stream"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:layout_x="685dp"
        android:layout_y="83dp"
        android:text="Connetti Stream"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.757"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="245dp"
        android:textSize="10dp"
        />

    <EditText
        android:id="@+id/id_url"
        android:layout_width="206dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Inserisci URL"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/id_browser"
        android:layout_marginLeft="115dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.473" />

    <WebView
        android:id="@+id/id_browser"
        android:layout_width="291dp"
        android:layout_height="240dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </WebView>


</android.support.constraint.ConstraintLayout>
